<UserControl x:Class="LanAttacks.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanAttacks.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="824
             ">
    <Grid>
        <StackPanel>
            <Grid HorizontalAlignment="Center" Height="786" Width="824">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button FontSize="32" Grid.Row="0" Grid.Column="0" Content="Spoofing" Height="300" Width="300" Cursor="Hand" />
                <Button FontSize="32" Grid.Row="0" Grid.Column="1" Content="Sniffing" Height="300" Width="300" Cursor="Hand" />
                <Button FontSize="32" Grid.Row="1" Grid.Column="0" Content="ICMP Flooding" Height="300" Width="300" Cursor="Hand" />
                <Button FontSize="32" Grid.Row="1" Grid.Column="1" Content="RANDOM" Height="300" Width="300" Cursor="Hand" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
