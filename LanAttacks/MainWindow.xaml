<Window x:Class="LanAttacks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanAttacks"
        xmlns:viewmodels="clr-namespace:LanAttacks.ViewModels"
        xmlns:views="clr-namespace:LanAttacks.Views"
        mc:Ignorable="d"
        Title="LAN Attacks" Height="800" Width="1024" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Name="homeViewTemplate" DataType="{x:Type viewmodels:HomeViewModel}">
                <views:HomeView DataContext="{Binding}"/>
            </DataTemplate>
            <DataTemplate x:Name="spoofingViewTemplate" DataType="{x:Type viewmodels:SpoofingViewModel}">
                <views:SpoofingView DataContext="{Binding}"/>
            </DataTemplate>
            <DataTemplate x:Name="sniffingViewTemplate" DataType="{x:Type viewmodels:SniffingViewModel}">
                <views:SniffingView DataContext="{Binding}"/>
            </DataTemplate>
            <DataTemplate x:Name="icmpFloodingViewTemplate" DataType="{x:Type viewmodels:ICMPFloodingViewModel}">
                <views:ICMPFloodingView DataContext="{Binding}"/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Border Background="#1f1d2b" RenderTransformOrigin="0.5,0.5" Margin="0,0,797,0" Width="230">
            <StackPanel Margin="0,0,30,0">
                <TextBlock Text="LAN Attacks" FontSize="28" Margin="20,40,10,0" Foreground="White" RenderTransformOrigin="0.503,1.834" />
                <Button Style="{StaticResource MenuBtnStyles}" FontSize="20" Content="Home" Margin="0,200,0,0" Height="50"  Width="200" Click="HomeView_Clicked" />
                <Button Style="{StaticResource MenuBtnStyles}" FontSize="20" Content="Spoofing" Margin="0,0,0,0" Height="50"  Width="200" Click="SpoofingView_Clicked" />
                <Button Style="{StaticResource MenuBtnStyles}" FontSize="20" Content="Sniffing" Margin="0,0,0,0" Height="50" Width="200" Click="SniffingView_Clicked" />
                <Button Style="{StaticResource MenuBtnStyles}" FontSize="20" Content="ICMP Flooding" Margin="0,0,0,0" Height="50" Width="200" Click="ICMPFloodingView_Clicked" />
            </StackPanel>
        </Border>
        <Border Background="#252836" Margin="200,0,0,0">
            <ContentControl Content="{Binding}"/>
        </Border>
    </Grid>
</Window>
